model Medicine {
    id           String   @id @default(uuid())
    name         String
    brand        String?
    manufacturer String?
    description  String?
    price        Decimal  @db.Decimal(10, 2)
    stock        Int
    categoryName String
    imageUrl     String?
    isActive     Boolean  @default(true)
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    
    sellerId String
    seller   User   @relation("SellerMedicines", fields: [sellerId], references: [id])

    reviews    Review[]
    cartItems  CartItem[]

    @@index([categoryName])
    @@index([sellerId])
    @@map("medicine")
}
